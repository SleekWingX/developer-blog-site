{{!< layouts/main}}
<h1>Your Dashboard</h1>
<a href="/posts/new">Create New Post</a> | <a href="/logout">Logout</a>
{{#each posts}}
<div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <button onclick="location.href='/posts/edit/{{this.id}}'">Edit</button>
    <button onclick="location.href='/posts/delete/{{this.id}}'">Delete</button>
</div>
{{/each}}
