{{#if loggedIn}}
    <p>Welcome, {{username}}!</p>
    <a href="/dashboard">Go to Dashboard</a>
{{else}}
    <a href="/login">Login</a>
    <a href="/signup">Sign Up</a>
{{/if}}
{{#each posts as |post|}}
    <div>
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <a href="/post/{{post.id}}">Read more</a>
    </div>
{{/each}}
